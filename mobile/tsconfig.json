{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "expo-router/types",
      "react",
      "react-native"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "app",
    "src",
    "expo-env.d.ts",
    "src/components",
    "src/lib/db.ts",
    "src/lib/fs.ts",
    "src/lib/types.ts",
    ".expo/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "web",
    "server"
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}
